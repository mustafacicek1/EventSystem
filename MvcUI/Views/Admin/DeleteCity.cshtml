@model MvcUI.Models.CityViewModel

@{
    ViewData["Title"] = "DeleteCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3 class="text-center">Seçilen şehri silmek istediğinize emin misiniz?</h3>
<div class="text-center">
    <h4>Şehir Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CityId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
    </dl>
    
    <form asp-action="DeleteCity">
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="GetCities">Vazgeç</a>
    </form>
</div>
@if (ViewBag.message != null)
{
    <div class="alert alert-success mt-5">
        @ViewBag.message
    </div>
}
