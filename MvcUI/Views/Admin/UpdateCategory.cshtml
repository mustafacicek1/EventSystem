@model CategoryViewModel

@{
    Layout = "_AdminLayout";
}

<h2 class="text-center mt-2">Kategori Güncelleme Formu</h2>
@using (Html.BeginForm("UpdateCategory","Admin",FormMethod.Post))
{
    <div class="form-group">
        <div class="mb-3">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(m=>m.CategoryName, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a class="btn btn-danger" href="/Admin/GetCategories" >Vazgeç</a>
    </div>
    </div>
}
@if (ViewBag.message != null)
{
    <div class="alert alert-info mt-5">
        @ViewBag.message
    </div>
}
